                        padding-right: .3em;
.mainBack
    &-ImgContainer
        max-height: 500px;
        overflow: hidden;
        max-width: 1400px;
        img
            width: 100%
.mainMenu
    background: #e51a35;
    position: relative;
    z-index: 2;
    &-Container
        &-Wrap
            display: flex;
            justify-content: space-around;
            padding: 2.5em 0 1em;
            align-items: flex-start;
            &-Item
                text-align: center;
                display: flex;
                align-items: center;
                .itemCont
                    max-width: 150px;
                    display: flex
                    align-items: center
                    flex-direction: column
                    &-Img
                        height: 125px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        border-radius: 50%;
                        background: white;
                        width: 125px;
                    p
                        font-family: "BritishCouncil-black";
                        color: white;
.mainConten
    .normalCont
        display: flex
        flex-direction: column
        .text
            display: flex
            align-items: center;
            position: relative
            .textCont
                font-size: 22px
                width: 50%
                text-align: left
                padding 0 1em
                h3
                    text-align: center
                    color: #00a8e1;
            .parallaxImage
                width: 50%;
                display: flex;
                flex-direction: column;
                align-items: center;
                padding: 2em;
                .images
                    position: absolute
                    top 0
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    width: 50%
                    transition: all .1s ease-in-out
            .p1
                img
                    &:first-child
                        align-self: flex-end;
            .p2
                img
                    &:last-child
                        align-self: flex-end;
.footer
    margin-top: 7em
    background: #00a8e1
    position: relative
    .pencil
        position: absolute
        left: 0
        bottom: 5em;
        
    &-Container
        padding 0 1em
        .footer-header
            position: relative
            display: flex
            justify-content: space-between
            align-items: center
            .plants
                position: absolute
                top -6.4em
            .title
                width: 70%
                h3
                    margin: 0
                    color white
                    padding: 2em 0
        form
            .footer-footer
                padding-top: 2em;
                position: relative
            .footer-form
                display: flex
                justify-content: space-between;
                align-items: flex-start
                flex-wrap: wrap
                .col
                    width: 25%
                    display: flex
                    flex-direction: column
                    min-width: 250px
                    &:nth-child(2)
                        padding: 0 2em;
                        border-right: 1px solid white;
                        border-left: 1px solid white;
                    &:last-child
                        align-items: flex-end;
                        label
                            text-align: left;
                            width: 100%;
                            color: white;
                    input[type=text]
                    input[type=email]
                    input[type=password]
                    textarea
                    select
                        border: 0
                        font-size: 16px
                        padding: .5em .8em
                        margin: .5em 0
                        width: 100%
                    label
                        color: white;
            .footer-fix
                display: flex;
                justify-content space-between !important
                padding: 1em 0;
                flex-wrap: wrap
                p
                    max-width: 500px
                    margin-right: 3em
                    font-size: 14px;
                    color: white
                    margin: 0
                .refix
                    display: flex
            .required
                display: flex;
                justify-content: flex-start;
                padding: 1em 0;
                p
                    font-size: 14px;
                    color: white
                    margin: 0
.check
    width: 21px
    height: 21px
    position: relative
    margin-right: 1em;
    p
        margin: 0
        color: white
    input[type=checkbox]:not(:checked)
    input[type=checkbox]:checked
        left: 0;
        z-index: 1;
        width: 21px;
        height: 21px;
        opacity: 0;
        position: absolute
    input[type="checkbox"]:not(:checked) + label
    input[type="checkbox"]:checked + label
        position: absolute;
        cursor: pointer;
        width: 21px;
        height: 21px;
        left: 0;
    input[type="checkbox"] + label:after 
        content: '';
        background-image: url(../img/required-inactive.svg);
        position: absolute;
        left: 0;
        top: 0;
        width: 21px;
        height: 21px;
    input[type="checkbox"] + label:before 
        content: '';
        position: absolute;
        background-image: url(../img/icon-required.svg);
        top: 0;
        left: 0;
        width: 21px;
        height: 21px;
    input[type="checkbox"]:not(:checked) + label:before
        opacity: 0;
    input[type="checkbox"]:checked + label:before
        opacity: 1;
    input[type="checkbox"]:not(:checked) + label:after
        opacity: 1;
    input[type="checkbox"]:checked + label:after
        opacity: 1;
    input[type="checkbox"]:disabled:checked + label:after 
        color: #999;
    input[type="checkbox"]:disabled + label
        color: #aaa;
